{{#extends "base"}}
{{#block "content"}}
<h2>{{#if product}}Edit Product{{else}}Add Product{{/if}}</h2>
<form action="{{#if product}}/products/edit/{{product.product_id}}{{else}}/products/new{{/if}}" method="POST">
    <label for="product_name">Product Name:</label>
    <input type="text" id="product_name" name="product_name" value="{{product.product_name}}" required>

    <label for="price">Price:</label>
    <input type="number" step="0.01" id="price" name="price" value="{{product.price}}" required>

    <label for="stock_quantity">Stock Quantity:</label>
    <input type="number" id="stock_quantity" name="stock_quantity" value="{{product.stock_quantity}}" required>

    <button type="submit">{{#if product}}Update{{else}}Create{{/if}}</button>
</form>
<a href="/products">Cancel</a>
<h1>customer</h1>
<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Rating</th>
        <th>Company</th>
    </tr>
    {{#each customer}}
    <tr>
        <td>{{first_name}}</td>
        <td>{{last_name}}</td>
        <td>{{rating}}</td>
        <td>{{name}}</td>
    </tr>
    {{/each}}
</table>

{{/block}}
{{/extends}}